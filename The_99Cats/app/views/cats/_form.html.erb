<% if action == :edit %>
    <% action_url = cat_url(cat) %>
<% else %>
    <% action_url = cats_url %>
<% end %>

<form action="<%= action_url %>" method="POST">
    <% if action == :edit %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>

    <label for="name">Name</label>
    <input id="name" type="text" name="cat[name]" value=" <%= cat.name %>">
    <br>
    <label for="birth_date">Birth Date</label>
    <input id="birth_date" type="text" name="cat[birth_date]" value=" <%= cat.birth_date %>">
    <br>
    <label for="sex">Sex</label>
    <select id="sex" name="cat[sex]">
        <option disabled <%= cat.sex ? "" : "selected" %>>-- Please Select --</option>
        <option value="M" <%= cat.sex == 'M' ? "selected" : "" %>>M</option>
        <option value="F" <%= cat.sex == 'F' ? "selected" : "" %>>F</option>
    </select>
    <br>
    <label for="color">Color</label>
    <select id="color" name="cat[color]">
        <option disabled <%= cat.color ? "" : "selected" %>>-- Please Select --</option>
        <option value="orange" <%= cat.color == 'orange' ? "selected" : "" %>>Orange</option>
        <option value="grey" <%= cat.color == 'grey' ? "selected" : "" %>>Grey</option>
        <option value="black" <%= cat.color == 'black' ? "selected" : "" %>>Black</option>
    </select>
    <br>
    <br>
    <label for="description">Description</label>
    <textarea name="cat[description]">
        <%= cat.description %>
    </textarea>
    <br>
    <input type="submit" value="<%= (action == :edit) ? 'update cat' : 'add cat' %>">
</form>